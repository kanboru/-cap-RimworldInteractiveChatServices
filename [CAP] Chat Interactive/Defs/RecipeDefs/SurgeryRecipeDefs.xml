<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Gender Swap Surgery -->
  <RecipeDef Name="GenderSwapSurgery" ParentName="SurgeryFlesh">
    <defName>GenderSwapSurgery</defName>
    <label>gender swap</label>
    <description>Performs a gender swap on the patient.</description>
    <workerClass>CAP_ChatInteractive.Commands.CommandHandlers.GenderSwapRecipeWorker</workerClass>
    <surgerySuccessChanceFactor>1</surgerySuccessChanceFactor>
    <workSpeedStat>MedicalOperationSpeed</workSpeedStat>
    <workAmount>3200</workAmount>
    <anesthetize>true</anesthetize>
    <workSpeedStat>MedicalOperationSpeed</workSpeedStat>
    <hideBodyPartNames>true</hideBodyPartNames>
    <appliedOnFixedBodyParts>
      <li>Torso</li>
    </appliedOnFixedBodyParts>
    <skillRequirements>
      <Medicine>10</Medicine>
    </skillRequirements>
    <!-- Ingredients required for the surgery -->
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <!-- This sets what shows in the bill filter by default -->
    <defaultIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
    </defaultIngredientFilter>
    <!-- Optional: Force only medicine to be usable -->
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
    </fixedIngredientFilter>
  </RecipeDef>

  
